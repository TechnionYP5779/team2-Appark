<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/offerItemLayer">

    <TextView
        android:id="@+id/textView_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_booking"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:text="Price" />

    <Button
        android:id="@+id/button_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Book Now" />

    <TextView
        android:id="@+id/distance_from_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_booking"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/textView_price"
        android:text="" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvTimeAndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_price"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/button_booking"
        android:layout_toEndOf="@+id/imageView"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Time And Date" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_booking"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/button_booking"
        android:layout_toEndOf="@+id/imageView"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Address" />


</RelativeLayout>